<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.padc.cooking.components.textviews.MMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/margin_medium_2"
                android:text="Description"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />


            <com.padc.cooking.components.textviews.MMTextView
                android:id="@+id/tv_market_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginTop="4dp"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_medium"
                android:text="4th marketplace by City Mart Supermarket"
                android:textColor="#000"
                android:textSize="@dimen/text_regular_2" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.padc.cooking.components.textviews.MMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/margin_medium_2"
                android:text="Location"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />


            <com.padc.cooking.components.textviews.MMTextView
                android:id="@+id/tv_market_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginTop="4dp"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_medium"
                android:text="No 69, 6.5 Mile, Pyay Road, Hlaing Township, Yangon."
                android:textColor="#000"
                android:textSize="@dimen/text_regular_2" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.padc.cooking.components.textviews.MMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/margin_medium_2"
                android:text="Website"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />


            <com.padc.cooking.components.textviews.MMTextView
                android:id="@+id/tv_website_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginTop="4dp"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_medium"
                android:text="http://citymart.com.mm/"
                android:textColor="#000"
                android:textSize="@dimen/text_regular_2" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>